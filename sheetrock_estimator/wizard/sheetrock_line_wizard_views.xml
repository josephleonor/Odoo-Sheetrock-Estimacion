<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sheetrock_line_wizard_form" model="ir.ui.view">
        <field name="name">sheetrock.line.wizard.form</field>
        <field name="model">sheetrock.line.wizard</field>
        <field name="arch" type="xml">
            <form string="Calculadora TÃ©cnica Sheetrock">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="sale_line_id" invisible="1"/>
                        </group>
                        <group string="Valores por defecto (Nuevas secciones)">
                            <field name="default_faces"/>
                            <field name="default_gauge"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Secciones de Muro">
                            <field name="section_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="length"/>
                                    <field name="height"/>
                                    <field name="faces"/>
                                    <field name="structure_gauge"/>
                                    <field name="board_thickness" optional="hide"/>
                                    <field name="add_reinforcement" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_confirm" string="Confirmar y Calcular" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
